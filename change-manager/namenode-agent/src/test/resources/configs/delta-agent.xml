<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <agent>
        <module>change-delta-processors</module>
        <instance>delta-stream-processor</instance>
        <source>ha-cluster</source>
        <enableHeartbeat>true</enableHeartbeat>
        <needHadoop>false</needHadoop>
        <connections>
            <path>config</path>
        </connections>
        <managers>
            <state>
                <stateManagerClass>ai.sapper.hcdc.agents.common.ProcessorStateManager</stateManagerClass>
                <basePath>/hcdc/state</basePath>
                <connection>zk-state-connection</connection>
            </state>
            <domain>
                <basePath>/hcdc/registry/files</basePath>
                <connection>zk-state-connection</connection>
            </domain>
        </managers>
        <processor>
            <cdc>
                <sender>
                    <connectionType>kafka</connectionType>
                    <connection>delta-kafka-queue</connection>
                    <partitioner>
                        <type>ai.sapper.hcdc.agents.pipeline.ChangeDeltaKafkaPartitioner</type>
                        <config>
                            <partitions>3</partitions>
                        </config>
                    </partitioner>
                </sender>
                <receiver>
                    <connectionType>kafka</connectionType>
                    <connection>cdc-kafka-queue</connection>
                    <!--partitioner></partitioner-->
                </receiver>
                <errorQueue>
                    <connectionType>kafka</connectionType>
                    <connection>errors-kafka-queue</connection>
                    <!--partitioner></partitioner-->
                </errorQueue>
                <readBatchTimeout>5000</readBatchTimeout>
            </cdc>
        </processor>
        <useSSL>false</useSSL>
    </agent>
    <locks>
        <lock>
            <name>global</name>
            <connection>zk-state-connection</connection>
            <lock-node>PROCESSOR-GLOBAL-LOCK</lock-node>
        </lock>
        <lock>
            <name>LOCK_REPLICATION</name>
            <connection>zk-state-connection</connection>
            <lock-node>PROCESSOR-DELTA-LOCK</lock-node>
        </lock>
    </locks>
    <config>
        <connections>
            <connection>
                <type>ai.sapper.cdc.core.connections.HdfsConnection</type>
                <hdfs>
                    <name>source-hdfs</name>
                    <namenode>
                        <primary>
                            <URI>hdfs://192.168.0.2:9000</URI>
                        </primary>
                        <secondary>
                            <URI>hdfs://192.168.0.3:9000</URI>
                        </secondary>
                    </namenode>
                    <security>
                        <enabled>false</enabled>
                    </security>
                    <enableAdmin>true</enableAdmin>
                </hdfs>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.HdfsHAConnection</type>
                <hdfs_ha>
                    <name>source-hdfs-ha</name>
                    <nameservice>ha-cluster</nameservice>
                    <failoverProvider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
                    </failoverProvider>
                    <namenodes>nn1=192.168.0.2:9000;nn2=192.168.0.3:9000</namenodes>
                    <security>
                        <enabled>false</enabled>
                    </security>
                    <enableAdmin>true</enableAdmin>
                </hdfs_ha>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                <zookeeper>
                    <name>zk-state-connection</name>
                    <connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString>
                    <retry>
                        <interval>1500</interval>
                        <retries>5</retries>
                    </retry>
                    <connectionTimeout>10000</connectionTimeout>
                </zookeeper>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.impl.BasicKafkaProducer</type>
                <kafka>
                    <name>delta-kafka-queue</name>
                    <mode>Producer</mode>
                    <producer>
                        <config>src/test/resources/configs/kafka/producer-delta-out.properties</config>
                    </producer>
                    <topic>ha-cluster-delta</topic>
                </kafka>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.impl.BasicKafkaProducer</type>
                <kafka>
                    <name>errors-kafka-queue</name>
                    <mode>Producer</mode>
                    <producer>
                        <config>src/test/resources/configs/kafka/producer-delta-errors.properties</config>
                    </producer>
                    <topic> ha-cluster-errors-delta</topic>
                </kafka>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.impl.BasicKafkaConsumer</type>
                <kafka>
                    <name>cdc-kafka-queue</name>
                    <mode>Consumer</mode>
                    <consumer>
                        <config>src/test/resources/consumer.properties</config>
                        <partitions>0</partitions>
                    </consumer>
                    <topic>ha-cluster-cdc</topic>
                </kafka>
            </connection>
        </connections>
    </config>
</configuration>