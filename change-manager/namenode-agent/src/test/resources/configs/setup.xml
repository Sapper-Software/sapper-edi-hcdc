<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <env>
        <name>DEV</name>
        <agent>
            <module>EDITS-LOG-PROCESSORS</module>
            <instance>setup</instance>
            <source>ha-cluster</source>
            <enableHeartbeat>false</enableHeartbeat>
            <needHadoop>false</needHadoop>
            <connections>
                <path>config</path>
            </connections>
            <managers>
                <state>
                    <basePath>/ai/sapper/cdc/utils</basePath>
                    <connection>zk-state-connection</connection>
                </state>
            </managers>
        </agent>
        <locks>
            <connection>zk-state-connection</connection>
            <path>/ai/sapper/cdc/registry</path>
            <lock>
                <name>global</name>
                <lock-node>NN-GLOBAL-LOCK</lock-node>
            </lock>
            <lock>
                <name>LOCK_REPLICATION</name>
                <lock-node>NN-REPLICATION-LOCK</lock-node>
            </lock>
        </locks>
        <config>
            <connections>
                <shared>
                    <connection>zk-state-connection</connection>
                    <path>/ai/sapper/cdc/registry</path>
                </shared>
                <connection>
                    <type>ai.sapper.cdc.core.connections.WebServiceConnection</type>
                    <rest>
                        <name>snapshot</name>
                        <endpoint>http://localhost:8080/snapshot</endpoint>
                    </rest>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.hadoop.HdfsConnection</type>
                    <hdfs>
                        <name>source-hdfs</name>
                        <namenode>
                            <primary>
                                <URI>hdfs://192.168.2.2:9820</URI>
                            </primary>
                            <secondary>
                                <URI>hdfs://192.168.2.3:9820</URI>
                            </secondary>
                        </namenode>
                        <security>
                            <enabled>false</enabled>
                        </security>
                        <enableAdmin>true</enableAdmin>
                    </hdfs>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.hadoop.HdfsHAConnection</type>
                    <hdfs_ha>
                        <name>source-hdfs-ha</name>
                        <nameservice>ha-cluster</nameservice>
                        <failoverProvider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
                        </failoverProvider>
                        <namenodes>nn1=192.168.2.2:9820;nn2=192.168.2.3:9820</namenodes>
                        <security>
                            <enabled>false</enabled>
                        </security>
                        <enableAdmin>true</enableAdmin>
                    </hdfs_ha>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                    <zookeeper>
                        <name>zk-state-connection</name>
                        <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                        <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                        <retry>
                            <interval>1500</interval>
                            <retries>5</retries>
                        </retry>
                        <connectionTimeout>10000</connectionTimeout>
                    </zookeeper>
                </connection>
                <!-- Kafka Producer connections-->
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>producer-edits-queue</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/configs/kafka/producer-editlog.properties</config>
                        </producer>
                        <topic>ha-cluster.edits</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>producer-cdc-queue</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/configs/kafka/producer-hcdc-out.properties</config>
                        </producer>
                        <topic>ha-cluster.cdc</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>producer-delta-queue</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/configs/kafka/producer-files-out.properties</config>
                        </producer>
                        <topic>ha-cluster.delta</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>producer-delta-files-queue</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/configs/kafka/producer-files-out.properties</config>
                        </producer>
                        <topic>ha-cluster.delta.files</topic>
                    </kafka>
                </connection>
                <!-- Kafka Producer Connections - Error Queues-->
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>producer-errors-queue</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/configs/kafka/producer-files-errors.properties</config>
                        </producer>
                        <topic>ha-cluster.errors.files</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaProducer</type>
                    <kafka>
                        <name>producer-errors-files-queue</name>
                        <mode>Producer</mode>
                        <producer>
                            <config>src/test/resources/configs/kafka/producer-files-errors.properties</config>
                        </producer>
                        <topic>ha-cluster.errors</topic>
                    </kafka>
                </connection>
                <!-- Kafka Consumer connections-->
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaConsumer</type>
                    <kafka>
                        <name>consumer-edits-queue</name>
                        <mode>Consumer</mode>
                        <consumer>
                            <config>src/test/resources/consumer.properties</config>
                            <partitions>0</partitions>
                        </consumer>
                        <topic>ha-cluster.edits</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaConsumer</type>
                    <kafka>
                        <name>consumer-cdc-queue</name>
                        <mode>Consumer</mode>
                        <consumer>
                            <config>src/test/resources/consumer.properties</config>
                            <!--partitions>1</partitions-->
                        </consumer>
                        <topic>ha-cluster.cdc</topic>
                    </kafka>
                </connection>
                <connection>
                    <type>ai.sapper.cdc.core.connections.kafka.BasicKafkaConsumer</type>
                    <kafka>
                        <name>consumer-delta-queue</name>
                        <mode>Consumer</mode>
                        <consumer>
                            <config>src/test/resources/consumer.properties</config>
                            <!--partitions>1</partitions-->
                        </consumer>
                        <topic>ha-cluster.delta</topic>
                    </kafka>
                </connection>
            </connections>
        </config>
    </env>
</configuration>