<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <agent>
        <module>edits-log-processors</module>
        <instance>snapshot-processor</instance>
        <source>ha-cluster</source>
        <enableHeartbeat>true</enableHeartbeat>
        <needHadoop>false</needHadoop>
        <connections>
            <path>config</path>
        </connections>
        <managers>
            <state>
                <stateManagerClass>ai.sapper.hcdc.agents.common.ProcessorStateManager</stateManagerClass>
                <basePath>/hcdc/state</basePath>
                <connection>zk-state-connection</connection>
            </state>
            <domain>
                <basePath>/hcdc/registry/files</basePath>
                <connection>zk-state-connection</connection>
                <hdfs>source-hdfs-ha</hdfs>
            </domain>
            <schema>
                <basePath>/hcdc/registry/schemas</basePath>
                <connection>zk-state-connection</connection>
            </schema>
        </managers>
        <useSSL>false</useSSL>
        <processor>
            <snapshot>
                <sender>
                    <connectionType>kafka</connectionType>
                    <connection>cdc-kafka-queue</connection>
                    <!--partitioner></partitioner-->
                </sender>
                <tnxSender>
                    <connectionType>kafka</connectionType>
                    <connection>edits-kafka-queue</connection>
                    <!--partitioner></partitioner-->
                </tnxSender>
                <readBatchTimeout>5000</readBatchTimeout>
            </snapshot>
        </processor>
    </agent>
    <locks>
        <lock>
            <name>global</name>
            <connection>zk-state-connection</connection>
            <lock-node>NN-GLOBAL-LOCK</lock-node>
        </lock>
        <lock>
            <name>LOCK_REPLICATION</name>
            <connection>zk-state-connection</connection>
            <lock-node>NN-REPLICATION-LOCK</lock-node>
        </lock>
    </locks>
    <config>
        <connections>
            <connection>
                <type>ai.sapper.cdc.core.connections.HdfsConnection</type>
                <hdfs>
                    <name>source-hdfs</name>
                    <namenode>
                        <primary>
                            <URI>hdfs://192.168.2.2:9820</URI>
                        </primary>
                        <secondary>
                            <URI>hdfs://192.168.2.3:9820</URI>
                        </secondary>
                    </namenode>
                    <security>
                        <enabled>false</enabled>
                    </security>
                    <enableAdmin>true</enableAdmin>
                </hdfs>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.HdfsHAConnection</type>
                <hdfs_ha>
                    <name>source-hdfs-ha</name>
                    <nameservice>ha-cluster</nameservice>
                    <failoverProvider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
                    </failoverProvider>
                    <namenodes>nn1=192.168.2.2:9820;nn2=192.168.2.3:9820</namenodes>
                    <security>
                        <enabled>false</enabled>
                    </security>
                    <enableAdmin>true</enableAdmin>
                </hdfs_ha>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                <zookeeper>
                    <name>zk-state-connection</name>
                    <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                    <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                    <retry>
                        <interval>1500</interval>
                        <retries>5</retries>
                    </retry>
                    <connectionTimeout>10000</connectionTimeout>
                </zookeeper>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.impl.BasicKafkaProducer</type>
                <kafka>
                    <name>cdc-kafka-queue</name>
                    <mode>Producer</mode>
                    <producer>
                        <config>src/test/resources/configs/kafka/producer-hcdc-out.properties</config>
                    </producer>
                    <topic>ha-cluster.cdc</topic>
                </kafka>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.impl.BasicKafkaProducer</type>
                <kafka>
                    <name>edits-kafka-queue</name>
                    <mode>Producer</mode>
                    <producer>
                        <config>src/test/resources/configs/kafka/producer-editlog.properties</config>
                    </producer>
                    <topic>ha-cluster.edits</topic>
                </kafka>
            </connection>
        </connections>
    </config>
</configuration>