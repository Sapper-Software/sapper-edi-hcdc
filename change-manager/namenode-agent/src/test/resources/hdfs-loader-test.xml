<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <loader>
        <baseDir>/test/hcdc/loader/avro</baseDir>
        <connections>
            <path>config</path>
            <use>test-hdfs-ha</use>
        </connections>
    </loader>
    <config>
        <connections>
            <connection>
                <type>ai.sapper.cdc.core.connections.HdfsConnection</type>
                <hdfs>
                    <name>test-hdfs</name>
                    <namenode>
                        <primary>
                            <URI>hdfs://192.168.2.2:9820</URI>
                        </primary>
                        <secondary>
                            <URI>hdfs://192.168.2.3:9820</URI>
                        </secondary>
                    </namenode>
                    <security>
                        <enabled>false</enabled>
                    </security>
                    <enableAdmin>true</enableAdmin>
                </hdfs>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.HdfsHAConnection</type>
                <hdfs_ha>
                    <name>test-hdfs-ha</name>
                    <nameservice>ha-cluster</nameservice>
                    <failoverProvider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
                    </failoverProvider>
                    <namenodes>nn1=192.168.2.2:9820;nn2=192.168.2.3:9820</namenodes>
                    <security>
                        <enabled>false</enabled>
                    </security>
                    <enableAdmin>true</enableAdmin>
                </hdfs_ha>
            </connection>
            <connection>
                <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
                <zookeeper>
                    <name>test-zk</name>
                    <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                    <connectionString>192.168.2.16:2181,192.168.2.17:2181,192.168.2.18:2181</connectionString>
                    <retry>
                        <interval>1500</interval>
                        <retries>5</retries>
                    </retry>
                    <connectionTimeout>10000</connectionTimeout>
                </zookeeper>
            </connection>
        </connections>
    </config>
</configuration>