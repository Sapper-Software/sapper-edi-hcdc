<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <connections>
        <connection>
            <type>ai.sapper.cdc.core.connections.HdfsConnection</type>
            <hdfs>
                <name>test-hdfs</name>
                <namenode>
                    <primary>
                        <URI>hdfs://localhost:9820</URI>
                    </primary>
                    <secondary>
                        <URI>hdfs://localhost:9830</URI>
                    </secondary>
                </namenode>
                <security>
                    <enabled>false</enabled>
                </security>
                <enableAdmin>true</enableAdmin>
            </hdfs>
        </connection>
        <connection>
            <type>ai.sapper.cdc.core.connections.HdfsHAConnection</type>
            <hdfs_ha>
                <name>test-hdfs-ha</name>
                <nameservice>ha-cluster</nameservice>
                <failoverProvider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider
                </failoverProvider>
                <namenodes>nn1=localhost:9820;nn2=localhost:9830</namenodes>
                <security>
                    <enabled>false</enabled>
                </security>
                <enableAdmin>true</enableAdmin>
            </hdfs_ha>
        </connection>
        <connection>
            <type>ai.sapper.cdc.core.connections.ZookeeperConnection</type>
            <zookeeper>
                <name>test-zk</name>
                <!--connectionString>192.168.0.5:2181,192.168.0.4:2181</connectionString -->
                <connectionString>localhost:2181</connectionString>
                <retry>
                    <interval>1500</interval>
                    <retries>5</retries>
                </retry>
                <connectionTimeout>10000</connectionTimeout>
            </zookeeper>
        </connection>
        <connection>
            <type>ai.sapper.cdc.core.connections.WebServiceConnection</type>
            <rest>
                <name>test-ws</name>
                <endpoint>https://howtodoinjava.com/</endpoint>
                <paths>
                    <jersey>jersey</jersey>
                    <other>jersey/jersey-restful-client-examples/</other>
                </paths>
            </rest>
        </connection>
        <connection>
            <type>ai.sapper.cdc.core.connections.impl.BasicKafkaProducer</type>
            <kafka>
                <name>test-kafka-producer</name>
                <mode>Producer</mode>
                <producer>
                    <config>src/test/resources/producer.properties</config>
                </producer>
                <topic>hcdc-test</topic>
            </kafka>
        </connection>
        <connection>
            <type>ai.sapper.cdc.core.connections.impl.BasicKafkaConsumer</type>
            <kafka>
                <name>test-kafka-consumer</name>
                <mode>Consumer</mode>
                <consumer>
                    <config>src/test/resources/consumer.properties</config>
                    <partitions>0</partitions>
                </consumer>
                <topic>hcdc-test</topic>
            </kafka>
        </connection>
    </connections>
</configuration>