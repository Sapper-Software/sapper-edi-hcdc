<?xml version="1.0" encoding="ISO-8859-1" ?>
<configuration>
    <connections>
        <connection>
            <type>ai.sapper.hcdc.core.connections.HdfsConnection</type>
            <hdfs>
                <name>test-hdfs</name>
                <namenode>
                    <primary>
                        <URI>hdfs://192.168.0.2:9000</URI>
                    </primary>
                    <secondary>
                        <URI>hdfs://192.168.0.3:9000</URI>
                    </secondary>
                </namenode>
                <security>
                    <enabled>false</enabled>
                </security>
                <enable_admin>true</enable_admin>
            </hdfs>
        </connection>
        <connection>
            <type>ai.sapper.hcdc.core.connections.HdfsHAConnection</type>
            <hdfs_ha>
                <name>test-hdfs-ha</name>
                <nameservice>ha-cluster</nameservice>
                <failover_provider>org.apache.hadoop.hdfs.server.namenode.ha.ConfiguredFailoverProxyProvider</failover_provider>
                <namenodes>nn1=192.168.0.2:9000;nn2=192.168.0.3:9000</namenodes>
                <security>
                    <enabled>false</enabled>
                </security>
                <enable_admin>true</enable_admin>
            </hdfs_ha>
        </connection>
    </connections>
</configuration>